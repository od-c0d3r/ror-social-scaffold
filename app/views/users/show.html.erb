<section class="user-section">
  <%= gravatar_for @user %>
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if @user != current_user && friend?(@user) && (request_sent?(@user) == false) %>
      <%= link_to 'Add Friend', friendships_path(:friendship => {:friend_id => @user.id}),method: :post, class: 'profile-link profile-link-btn' %>  
    <% elsif @user != current_user && (request_sent?(@user) == true) && !friend?(@user) %>
        <%= link_to 'Request sent', '#', class: 'profile-link profile-link-btn' %>
    <% elsif friend?(@user) && @user != current_user %>
            <h6>he is a friend</h6>

    <% end%>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
